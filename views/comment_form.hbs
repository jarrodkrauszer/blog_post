<section class="column align-center blog-output">
  {{#with blog}}
    <div class="blog">
      <header class="row justify-between align-center">
        <h1>{{title}}</h1>
        <div class="row justified-between posted-by">
          <p>Posted By: {{author.user_name}}</p>
          <span>on</span>
          <p>{{date}}</p>
        </div>
      </header>
        <p class="text-center blog-text">{{text}}</p>
    </div>
  {{/with}}
    <form action="/comment/{{blog.id}}" method="POST" class="comment-form">
      <header class="comment-header"></header>
      <p>Comment</p>
      <textarea name="comment" cols="30" rows="3" placeholder="Write your Blog"></textarea>
      <button class="create-btn">Submit</button>
    </form>

    {{#each comments}}
      <div class="blog comment">
        <header class="comment-header"></header>
        <p>{{comment}}</p>
        <div class="row justified-between posted-by">
          <p>Posted By: {{author.user_name}}</p>
          <p><span>on  </span>{{date}}</p>
        </div>
      </div>
    {{/each}}
  
</section>