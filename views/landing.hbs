<section class="column align-center">
  {{#each blogs}}
    <div class="blog">
      <header class="row justify-between align-center">
        <h1>{{title}}</h1>
        <div class="row justified-between posted-by">
          <p>Posted By: {{author.user_name}}</p>
          <span>on</span>
          <p>{{date}}</p>
        </div>
      </header>
      <p class="text-center">{{text}}</p>
    </div>
  {{/each}}
</section>
